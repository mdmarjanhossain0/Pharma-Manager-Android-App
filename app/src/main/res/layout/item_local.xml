<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/itemImgId"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/paracetamol"
            />

        <TextView
            android:id="@+id/localBrandNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:text="Brand Name"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colorPrimaryVariant"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/itemImgId"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            />


        <ImageView
            android:id="@+id/historyImgId"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_cart"
            android:clickable="true"
            app:layout_constraintBottom_toTopOf="@+id/stockTvId"
            app:layout_constraintEnd_toStartOf="@+id/returnImgId"
            app:layout_constraintTop_toBottomOf="@+id/deleteLocalMedicine" />



        <ImageView
            android:id="@+id/deleteLocalMedicine"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_remove"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />



        <TextView
            android:id="@+id/shortListId"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_marginEnd="8dp"
            android:text="Short List"
            android:textSize="8dp"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/returnImgId"
            app:layout_constraintTop_toBottomOf="@+id/historyImgId" />

        <ImageView
            android:id="@+id/returnImgId"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_resource_return"
            app:layout_constraintBottom_toBottomOf="@+id/removeImgId"
            app:layout_constraintEnd_toStartOf="@+id/removeImgId"
            app:layout_constraintTop_toTopOf="@+id/removeImgId"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/removeImgId"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_remove"
            app:layout_constraintBottom_toBottomOf="@+id/localBrandNameTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/localBrandNameTV"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/localCompanyNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimaryVariant"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/localBrandNameTV"
            app:layout_constraintTop_toBottomOf="@+id/localBrandNameTV" />



        <TextView
            android:id="@+id/localMedicineManufactureNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimaryVariant"
            app:layout_constraintStart_toStartOf="@+id/localBrandNameTV"
            app:layout_constraintTop_toBottomOf="@+id/localCompanyNameTV"
            />

        <TextView
            android:id="@+id/localMRPTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="MRP à§³ 0.0"
            android:textColor="@color/speech_red"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/localCompanyNameTV"
            app:layout_constraintTop_toBottomOf="@+id/localMedicineManufactureNameTV" />


        <TextView
            android:id="@+id/stockTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Stock:1995"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/localMRPTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/localMRPTV"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>