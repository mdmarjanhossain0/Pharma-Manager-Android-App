<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImgId"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_inventory"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="DAR/MR Number"
                android:textColorHint="@color/colorPrimaryVariant"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dar_mr_NumberET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Brand Name"
                android:textColorHint="@color/colorPrimaryVariant"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/brand_nameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Manufacturer"
                android:textColorHint="@color/colorPrimaryVariant"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/manufactureET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Generic Name"
                android:textColorHint="@color/colorPrimaryVariant"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/genericET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Kind"
                android:textColorHint="@color/colorPrimaryVariant"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/kindET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Form"
                android:textColorHint="@color/colorPrimaryVariant"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/formET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Strength"
                android:textColorHint="@color/colorPrimaryVariant"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/strengthET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Expire Date"
                android:textColorHint="@color/colorPrimaryVariant"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/expDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_dofb"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="MRP"
                android:layout_weight="1"
                android:textColorHint="@color/colorPrimaryVariant"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mrpET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Purchases Price"
                android:layout_weight="1"
                android:textColorHint="@color/colorPrimaryVariant"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/purchases_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <TextView
                android:id="@+id/salesUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Sales Unit"
                android:gravity="center"
                android:drawableEnd="@drawable/ic_polygon"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/symtomORPurchasesUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Purchases Unit"
                android:gravity="center"
                android:drawableEnd="@drawable/ic_polygon"
                android:layout_weight="1"
                />
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stock"
                    android:textColor="@color/colorPrimaryVariant"
                    android:layout_marginLeft="15dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_marginLeft="15dp"
                    >
                    <TextView
                        android:id="@+id/minimumStockDecrementTV"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/blue_shape_round_outline"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="âˆ’"
                        android:textColor="@color/speech_red"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/minimumStockCount"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="1"
                        android:imeOptions="actionDone"
                        android:background="@drawable/blue_shape_round_outline"
                        android:inputType="numberDecimal"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        />




                    <TextView
                        android:id="@+id/minimumStockIncrementTV"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/blue_shape_round_outline"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="+"
                        android:textColor="#18BA0D"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pcs"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryVariant"
                        android:layout_weight="1"
                        />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/addNewMeasureUnit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_floating"
                    />
                <TextView
                    android:id="@+id/tv12"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:text="Add new unit of measure"
                    android:textColor="@color/colorPrimaryVariant"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addMedicineUnitsRvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >




            <Button
                android:id="@+id/addMedicineCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="25dp"
                android:backgroundTint="@color/colorPrimaryVariant"
                android:text="Cancel"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/addMedicineAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="25dp"
                android:backgroundTint="@color/colorPrimaryVariant"
                android:text="Update"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>