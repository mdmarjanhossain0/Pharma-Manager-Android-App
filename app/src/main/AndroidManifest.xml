<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.appbytes.pharma_manager">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.appbytes.pharma_manager.presentation.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DigitalPharmacy"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.appbytes.pharma_manager.presentation.shortlist.ShortListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.appbytes.pharma_manager.account.SettingsActivity"
            android:exported="false" />
        <activity
            android:name="com.appbytes.pharma_manager.account.EditUserActivity"
            android:exported="false" />
        <activity
            android:name="com.appbytes.pharma_manager.account.UsersActivity"
            android:exported="false" />
        <activity
            android:name="com.appbytes.pharma_manager.account.AddUserActivity"
            android:exported="false"
            android:label="@string/title_activity_add_user"
            android:theme="@style/Theme.DigitalPharmacy.NoActionBar" />
        <activity
            android:name="com.appbytes.pharma_manager.CashRecordActivity"
            android:exported="false" />
        <activity
            android:name="com.appbytes.pharma_manager.presentation.cashregister.CashRegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.appbytes.pharma_manager.presentation.purchases.PurchasesActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.appbytes.pharma_manager.presentation.sales.SalesActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.appbytes.pharma_manager.presentation.customer.CustomerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.appbytes.pharma_manager.presentation.supplier.SupplierActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.appbytes.pharma_manager.presentation.inventory.InventoryActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.appbytes.pharma_manager.presentation.auth.AuthActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.appbytes.pharma_manager.inventory.ContainerActivity"
            android:exported="true" />
        <activity
            android:name="com.appbytes.pharma_manager.register.VerifyActivity"
            android:exported="true" />
        <activity
            android:name="com.appbytes.pharma_manager.register.WelcomeActivity"
            android:exported="true" />
        <activity
            android:name="com.appbytes.pharma_manager.register.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.appbytes.pharma_manager.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.appbytes.pharma_manager.register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.appbytes.pharma_manager.presentation.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            tools:node="remove" /> <!-- <activity android:name="com.canhub.cropper.CropImageActivity" -->
        <!-- android:theme="@style/Base.Theme.AppCompat"/> -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.appbytes.pharma_manager.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>